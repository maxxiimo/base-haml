%head
  %meta{:charset => "utf-8"}
  %link{:rel => "dns-prefetch", :href => "//fonts.googleapis.com"}
  /[if IE] %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge"}

  %title= content_for?(:title) ? yield(:title) : "XXX"
  -# alternative title format.
  -# %title= content_for?(:title) ? ("XXX - " + yield(:title)) : "XXX"

  %meta{:name => "description", :content => "XXX"}
  %meta{:name => "viewport", :content => "width=device-width"}
  -# to match layout to device width as previous, and set zoom level to 1:1
  -# %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}

  %link{:rel => "shortcut icon", :href => "/favicon.ico"}
  %link{:rel => "apple-touch-icon", :href => "/apple-touch-icon.png"}

  = stylesheet_link_tag "application"
  -# for production customize modernizr at: http://www.modernizr.com/download/
  -# IMPORTANT: add the following to production.rb:
  -# config.assets.precompile += %w( modernizr-2.6.2.min.js )
  = javascript_include_tag 'modernizr-2.6.2.min'

  -# Google Web Fonts combination ideas, if you decide to use, uncomment combination and delete the rest.
  %link{:href => "http://fonts.googleapis.com/css?family=Droid+Serif", :rel => "stylesheet", :type => "text/css"}
  %link{:href => "http://fonts.googleapis.com/css?family=Droid+Sans", :rel => "stylesheet", :type => "text/css"}

  -# %link{:href => "http://fonts.googleapis.com/css?family=Cantata+One", :rel => "stylesheet", :type => "text/css"}
